<p id='alert'><%= alert %></p>

<h2>Login</h2>

<%= form_tag sessions_path do |form|  %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= text_field :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
